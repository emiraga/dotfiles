[user]
	name = Emir Habul
	email = emir@fb.com

[alias]
	br = branch -v
	co = checkout
	ci = commit
	st = status --untracked-files=no
	sh = show --word-diff --color
	di = diff --word-diff --color
	rb = rebase
	undo = reset --soft HEAD@{1}

	# Shows the full graph of commits
	graph = log --graph --oneline --all --decorate=short

[core]
	excludesfile = ~/.gitignore

[gc]
	auto = 0
[merge]
	conflictstyle = diff3
